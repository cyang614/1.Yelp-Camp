<% layout('layouts/boilerplate') %>
<h1>用戶登入</h1>
<form method="post" action="/login" class="validated-form" novalidate>
  <div class="mb-3">
    <label class="form-label" for="username">用戶名稱</label>
    <input
      class="form-control"
      type="text"
      id="username"
      name="username"
      required
    />
    <div class="valid-feedback">Looks Good!</div>
  </div>
  <div class="mb-3">
    <label class="form-label" for="password">密碼</label>
    <input
      class="form-control"
      type="password"
      id="password"
      name="password"
      required
    />
    <div class="valid-feedback">Looks Good!</div>
  </div>
  <button class="btn btn-success">登入</button>
</form>
